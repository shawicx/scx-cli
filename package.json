{
  "name": "@scxfe/cli",
  "version": "0.0.1",
  "description": "",
  "keywords": [
    "cli"
  ],
  "homepage": "https://github.com/shawicx/scx-cli#readme",
  "bugs": {
    "url": "https://github.com/shawicx/scx-cli/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shawicx/scx-cli.git"
  },
  "funding": "https://github.com/sponsors/shawicx",
  "license": "ISC",
  "author": "",
  "types": "dist/types.d.ts",
  "bin": "dist/index.js",
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/index.ts",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "eslint . && stylelint \"**/*.{css,less,scss}\"",
    "lint:fix": "prettier --write . && eslint --fix .",
    "prepare": "husky install",
    "prepublish": "bun run build",
    "publish": "standard-version",
    "postpublish": "git push origin main --tags",
    "release": "bun run prepublish && bun run publish && bun run postpublish"
  },
  "commitlint": {
    "extends": [
      "ali"
    ],
    "rules": {
      "type-case": [
        2,
        "always",
        [
          "lower-case",
          "upper-case"
        ]
      ],
      "type-enum": [
        2,
        "always",
        [
          "RELEASING",
          "feat",
          "fix",
          "docs",
          "style",
          "test",
          "refactor",
          "chore",
          "revert"
        ]
      ]
    }
  },
  "lint-staged": {
    "*.{cjs,cts,js,jsx,mjs,mts,ts,tsx,vue}": "eslint --fix",
    "*.{cjs,css,cts,html,js,json,jsx,less,md,mjs,mts,scss,ts,tsx,vue,yaml,yml}": "prettier --write"
  },
  "prettier": "prettier-config-ali",
  "eslintConfig": {
    "extends": [
      "ali/typescript/react",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "simple-import-sort"
    ],
    "rules": {
      "simple-import-sort/imports": [
        "error",
        {
          "groups": [
            [
              "^@?\\w"
            ],
            [
              "^"
            ],
            [
              "^\\."
            ],
            [
              "^\\.+\\u0000$"
            ],
            [
              "^\\u0000"
            ]
          ]
        }
      ],
      "simple-import-sort/exports": "error"
    }
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@shawbox/util": "^0.0.1",
    "commander": "^14.0.0",
    "consola": "^3.4.2",
    "csv-parse": "^6.1.0",
    "csv-stringify": "^6.6.0",
    "fs-extra": "^11.3.1",
    "simple-git": "^3.28.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@commitlint/cli": "^19.8.1",
    "@rsbuild/core": "^1.5.4",
    "@rsbuild/plugin-node-polyfill": "^1.4.2",
    "@rsbuild/plugin-type-check": "^1.2.4",
    "@shawbox/ts-config": "^0.0.2",
    "@types/node": "^20.14.11",
    "commitlint-config-ali": "^1.1.0",
    "eslint": "^8.57.0",
    "eslint-config-ali": "^15.0.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "prettier-config-ali": "^1.3.2",
    "standard-version": "^9.5.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
