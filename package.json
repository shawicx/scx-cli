{
  "name": "@scxfe/cli",
  "version": "0.0.0",
  "description": "",
  "keywords": [
    "cli"
  ],
  "homepage": "https://github.com/shawicx/scx-cli#readme",
  "bugs": {
    "url": "https://github.com/shawicx/scx-cli/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shawicx/scx-cli.git"
  },
  "funding": "https://github.com/sponsors/shawicx",
  "license": "ISC",
  "author": "",
  "types": "dist/types.d.ts",
  "bin": "dist/index.js",
  "scripts": {
    "build": "tsup",
    "dev": "ts-node-dev -r ./tsconfig-paths-bootstrap.js --respawn --transpile-only src/index.ts swagger --config",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "eslint . && stylelint \"**/*.{css,less,scss}\"",
    "lint:fix": "prettier --write . && eslint --fix .",
    "prepare": "husky install",
    "prepublish": "tsup",
    "publish": "changeset add && changeset version && changeset publish",
    "postaction": "git push origin main --tags",
    "release": "pnpm run prepublish && pnpm run publish && pnpm run postaction"
  },
  "commitlint": {
    "extends": [
      "ali"
    ],
    "rules": {
      "type-case": [
        2,
        "always",
        [
          "lower-case",
          "upper-case"
        ]
      ],
      "type-enum": [
        2,
        "always",
        [
          "RELEASING",
          "feat",
          "fix",
          "docs",
          "style",
          "test",
          "refactor",
          "chore",
          "revert"
        ]
      ]
    }
  },
  "lint-staged": {
    "*.{cjs,cts,js,jsx,mjs,mts,ts,tsx,vue}": "eslint --fix",
    "*.{cjs,css,cts,html,js,json,jsx,less,md,mjs,mts,scss,ts,tsx,vue,yaml,yml}": "prettier --write"
  },
  "prettier": "prettier-config-ali",
  "eslintConfig": {
    "extends": [
      "ali/typescript/react",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "simple-import-sort"
    ],
    "rules": {
      "simple-import-sort/imports": [
        "error",
        {
          "groups": [
            [
              "^@?\\w"
            ],
            [
              "^"
            ],
            [
              "^\\."
            ],
            [
              "^.+\\u0000$"
            ],
            [
              "^\\u0000"
            ]
          ]
        }
      ],
      "simple-import-sort/exports": "error"
    }
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "@shawbox/util": "^0.0.1",
    "commander": "^12.1.0",
    "simple-git": "^3.27.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@commitlint/cli": "^19.3.0",
    "@shawbox/ts-config": "^0.0.2",
    "@types/node": "^20.14.11",
    "commitlint-config-ali": "^1.1.0",
    "eslint": "^8.57.0",
    "eslint-config-ali": "^15.0.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "prettier-config-ali": "^1.3.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.2.2",
    "typescript": "^5.5.4"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
