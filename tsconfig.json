{
  "extends": "@shawbox/ts-config/base.json",
  "compilerOptions": {
    "rootDir": ".",
    "lib": ["ESNext"],
    "target": "ESNext",
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "strict": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "./tsconfig-paths-bootstrap.js"]
}
