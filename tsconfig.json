{
  "extends": "@shawbox/ts-config/base.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "lib": ["ESNext"],
    "target": "ESNext",
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "strict": true,
    "paths": {
      "~/*": ["./src/*"]
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "./tsup.config.ts", "./scripts/*"]
}
